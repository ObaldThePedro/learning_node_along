extends ../layouts/main-layout.pug


block styles
    link(rel="stylesheet", href="/css/product.css")
    link(rel="stylesheet", href="/css/main.css")
    link(rel="stylesheet", href="/css/forms.css")

block content
    - let edit = "edit-product"
    - let add = "add-product"
    main
        form.product-form(action= editing ? edit : add method="POST")
            .form-control
                label(for="title") Title
                input(type="text" name="title" id="title" value= editing ? product.title : null)
            .form-control
                label(for="image") Image
                input(type="url" name="image" id="image" value= editing ? product.image : null)
            .form-control
                label(for="description") Description
                textarea(name="description", id="description") #{editing ? product.description : null}
            .form-control
                label(for="price") Price
                input(type="number" name="price" id="price" value= editing ? product.price : null)
            
            if editing
                <input type="hidden" value=#{product.id} name=id>

            button.btn(type="submit") #{editing ? "Update Product" : "Add"}
